<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.team766.beartracks" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>

        <activity android:name=".welcome_screen"
            android:label="Bear Tracks">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".login_activity"
            android:label="Login Test"
            android:parentActivityName=".welcome_screen">
        </activity>

        <activity android:name=".Settings.SettingsActivity"
            android:label="Settings"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".Person_Details"
            android:label="Person Details" />

    </application>

</manifest>
